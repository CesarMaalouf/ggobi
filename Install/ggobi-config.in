#!/bin/sh

#
# This is intended to be the equivalent of gtk-config
# to allow other packages/software that want to locate the
# header/include files and libraries for a ggobi source
#
# --libs
# --cflags
# --version

TOP=@INSTALL_DIR@
GGOBI_ROOT=@GGOBI_INSTALL_HOME@
VERSION="@MAJOR_VERSION@.@MINOR_VERSION@-@PATCH_LEVEL@"

GTK_CFLAGS=@GTK_CONFIG_CFLAGS@
GTK_LIBS=@GTK_CONFIG_LIBS@

XML_LIB_DIRS="@XML_LIB_DIRS@"
XML_LIB_DIRS_PATH="@XML_LIB_DIRS_PATH@"


CFLAGS="@INSTALL_SRC_CFLAGS@ ${GTK_CFLAGS} @XML_INC_DIRS@ @XML_CFLAG_DEFINES@ @DEFS@ @OTHER_CFLAGS@"

LIBS="@INSTALL_SRC_LIBS@ -lggobi"


usage="
Usage: ggobi-config [option]

Options:
  --cflags
  --libs
  --xml-support
  --xml
  --xml-libs
  --xml-path
  --ld-library-path   
  --home
  --install-dir
"


if test $# -lt 1 ; then
 echo "$usage"
 exit 0
fi


case $1 in
   "--v")
          echo "${VERSION}"
          shift ;;
   "--cflags") 
          echo "${CFLAGS}"
          shift ;;
   "--libs")
        echo "${LIBS}"
        shift ;;
   "--xml-support")
        echo "@SUPPORTS_XML@" ;;
   "--xml-libs")
         echo "${XML_LIB_DIRS}"
         shift ;;
   "--xml-path")
         echo "${XML_LIB_DIRS_PATH}"
         shift ;;
   --ld-library-path)
         echo "@TOP@/lib"
         shift ;;
   --help|-h)
       echo "$usage"
       exit 0;;
   --home)
       echo "$GGOBI_ROOT"
       shift ;;
   --home)
       echo "$TOP"
       shift ;;
   "*") echo "Unrecognized argument $1"
          shift ;;
esac
